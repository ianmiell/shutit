[Unit]
Description=Plex container
After=docker.service

[Service]
Restart=always
ExecStartPre=-/usr/bin/docker rm plex_run
ExecStart=/usr/bin/docker run -h homeserver --volumes-from plex_config --volumes-from media_data -p 32400:32400 -p 32443:32443 -p 1900:1900/udp -p 32463:32463 -p 5353:5353/udp -p 32410:32410/udp -p 32412:32412/udp -p 32413:32413/udp -p 32414:32414/udp --name plex_run plex
ExecStop=/usr/bin/docker stop plex_run

[Install]
WantedBy=multi-user.target
